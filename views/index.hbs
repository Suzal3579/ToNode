<form action="/insert" method="post" class="form">
    <div class="row">
        <div class="col-md-11">
            <input class="form-control" type="text" name="item" placeholder="Enter your item here.">
        </div>
        <div class="col-md-1">
            <button class="btn btn-info pull-right" type="submit">Add</button>
        </div>
    </div>
</form>
<br> <br> {{#if itemListData}}
<div class="well">
    <ul class="list-group">
        {{# each itemListData}}
        <li class="list-group-item">
            {{this.item}}
            <a class="pull-right" href="/delete/{{this._id}}">
                <span class="glyphicon glyphicon-floppy-remove" aria-hidden="true"></span>
            </a>
            <a class="pull-right" href="/update/{{this._id}}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;&nbsp;
            </a>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}